<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blueberry" />
            <corners android:radius="@dimen/general_10dp" />
            <padding android:left="@dimen/general_10dp" android:right="@dimen/general_10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/grey" />
            <corners android:radius="@dimen/general_10dp" />
            <padding android:left="@dimen/general_10dp" android:right="@dimen/general_10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:centerX="35" android:endColor="@color/purple" android:startColor="@color/blueberry" />
            <corners android:radius="@dimen/general_10dp" />
            <padding android:left="@dimen/general_10dp" android:right="@dimen/general_10dp" />
        </shape>
    </item>
</selector>