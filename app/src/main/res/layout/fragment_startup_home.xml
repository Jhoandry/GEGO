<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/startup_step_1"
    android:id="@+id/logging_fragment"
    tools:context=".StartupHomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right_summary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_summary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <LinearLayout
        app:layout_constraintStart_toStartOf="@id/guideline_right_summary"
        app:layout_constraintEnd_toEndOf="@id/guideline_left_summary"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/login_data_input">

    <ImageView
        android:layout_marginTop="320dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/gego_logo"
        android:text="@string/startup_home_fragment"
        android:textSize="@dimen/text_size_12"
        android:id="@+id/lipo_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/startup_home_fragment"
            android:textSize="@dimen/text_size_12" />

        <Button
            app:layout_constraintTop_toBottomOf="@id/btn_signup_action"
            android:layout_marginTop="140dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dw_background_gradient_purple"
            android:text="@string/startup_home_signup_fragment"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/btn_signup_action"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/startup_home_fragment"
            android:textSize="@dimen/text_size_12" />


    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->



</androidx.constraintlayout.widget.ConstraintLayout>