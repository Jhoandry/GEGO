<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/purple</item>
        <item name="colorError">@color/red</item>
    </style>

    <style name="purpleGradientButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/dw_background_gradient_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="registerProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginTop">@dimen/general_5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/general_10dp</item>
        <item name="android:progressBackgroundTint">@color/grey</item>
        <item name="android:progressTint">@color/purple</item>
    </style>
</resources>